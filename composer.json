{
    "name": "izayoi256/mosaicgame",
    "description": "A library for the board game \"Mosaic\".",
    "keywords": [
        "mosaic",
        "tabletopgame",
        "boardgame"
    ],
    "type": "library",
    "license": [
        "GPL-3.0-only"
    ],
    "authors": [
        {
            "name": "izayoi256",
            "email": "qwert.izayoi@gmail.com"
        }
    ],
    "require": {
        "php": "^7.3|^8.0"
    },
    "suggest": {
        "ext-gmp": "Needed to support GMP, faster logic"
    },
    "autoload": {
        "psr-4": {
            "MosaicGame\\": "./src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "MosaicGame\\Test\\": "./tests"
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^9.4"
    }
}
